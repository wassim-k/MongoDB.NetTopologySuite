<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>1.0.1</Version>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Authors>wassim-k</Authors>
    <Copyright>MIT</Copyright>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Description>Serialize NetTopologySuite geospatial models to BSON and deserialize from BSON for MongoDB .NET C# Driver.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/wassim-k/MongoDB.NetTopologySuite</RepositoryUrl>
    <PackageTags>MongoDB;BSON;NetToplogySuite;Serialization</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include=".\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Bson" Version="2.18.0" />
    <PackageReference Include="NetTopologySuite" Version="2.5.0" />
    <PackageReference Include="NetTopologySuite.Features" Version="2.1.0" />
  </ItemGroup>

</Project>
